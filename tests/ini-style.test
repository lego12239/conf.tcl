lappend auto_path [pwd]/../
package require tcltest
package require conf

tcltest::test ini-1.0 {
	parameter without a group
} -body {
	conf::load_from_str "k=v"
} -result {{k v} {k .}}

tcltest::test ini-2.0 {
	parameter without a group and with a group
} -body {
	conf::load_from_str "k=v
	\[grp.one\]
	k=v"
} -result {{k v grp.one {k v}} {k . grp.one {k .}}}

tcltest::test ini-2.1 {
	parameter without a group and with a group
} -body {
	conf::load_from_str "k=v
	\[grp.one\]
	k1=v1"
} -result {{k v grp.one {k1 v1}} {k . grp.one {k1 .}}}

tcltest::test ini-2.2 {
	parameter without a group and with a group
} -body {
	conf::load_from_str "k=v
	k1=v1
	\[grp.one\]
	k2=v2
	k3=v3
	\[grp-two\]
	k4=v4"
} -result {{k v k1 v1 grp.one {k2 v2 k3 v3} grp-two {k4 v4}} {k . k1 . grp.one {k2 . k3 .} grp-two {k4 .}}}

tcltest::test ini-3.0 {
	parameter without a group and with a group(with hd)
} -body {
	conf::load_from_str -hd / "k=v
	k1=v1
	\[grp.one\]
	k2=v2
	k3=v3
	\[grp-two\]
	k4=v4"
} -result {{k v k1 v1 grp.one {k2 v2 k3 v3} grp-two {k4 v4}} {k . k1 . grp.one {k2 . k3 .} grp-two {k4 .}}}

tcltest::test ini-3.1 {
	parameter without a group and with a group(with hd)
} -body {
	conf::load_from_str -hd . "k=v
	k1=v1
	\[grp.one\]
	k2=v2
	k3=v3
	\[grp-two\]
	k4=v4"
} -result {{k v k1 v1 grp {one {k2 v2 k3 v3}} grp-two {k4 v4}} {k . k1 . grp {one {k2 . k3 .}} grp-two {k4 .}}}

tcltest::test ini-3.2 {
	parameter without a group and with a group(with hd)
} -body {
	conf::load_from_str -hd . "k=v
	grp.one.k1=vv
	\[grp.one\]
	k2=v2
	k3.g=v3
	\[grp-two\]
	k4.q=v4"
} -result {{k v grp {one {k1 vv k2 v2 k3 {g v3}}} grp-two {k4 {q v4}}} {k . grp {one {k1 . k2 . k3 {g .}}} grp-two {k4 {q .}}}}

tcltest::test ini-4.0 {
	parameter without a group and with a group(with hd)
} -body {
	conf::load_from_str -hd . "k=v
	a.b.k1=v1
	\[a.b.c.d\]
	k2=v2
	e.k3=v3
	\[a.b.c\]
	k4=v4
	\[a\]
	k5=v5
	\[a.b.c.d\]
	k6=v6"
} -result {{k v a {b {k1 v1 c {d {k2 v2 e {k3 v3} k6 v6} k4 v4}} k5 v5}} {k . a {b {k1 . c {d {k2 . e {k3 .} k6 .} k4 .}} k5 .}}}

tcltest::cleanupTests

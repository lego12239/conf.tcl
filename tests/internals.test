lappend auto_path [pwd]/../
package require tcltest
package require conf

tcltest::test internals-1.0 {
	ctx mk
} -body {
	set ctx [conf::_ctx_mk]
	return $ctx
} -result {prms {-hd {} -default {} -path ./} cspec {} src {} srcs {} sect {} sect_type {}}

tcltest::test internals-1.1 {
	ctx mk(with prms)
} -body {
	set ctx [conf::_ctx_mk {-hd . -default "k = v"}]
	return $ctx
} -result {prms {-hd . -default {k = v} -path ./} cspec {} src {} srcs {} sect {} sect_type {}}

tcltest::test internals-2.0 {
	ctx push
} -body {
	set ctx [conf::_ctx_mk]
	conf::_ctx_src_push ctx {src "k1 = v1" gets_r conf::gets_from_str}
	return $ctx
} -result {prms {-hd {} -default {} -path ./} cspec {} src {gets_r conf::gets_from_str lineno 0 lineno_tok 0 buf {} toks {} toks_toks {} src {k1 = v1}} srcs {{}} sect {} sect_type {}}

tcltest::test internals-2.1 {
	ctx push twice
} -body {
	set ctx [conf::_ctx_mk]
	conf::_ctx_src_push ctx {src "k1 = v1" gets_r conf::gets_from_str}
	conf::_ctx_src_push ctx {src "CHAN" gets_r conf::gets_from_file}
	return $ctx
} -result {prms {-hd {} -default {} -path ./} cspec {} src {gets_r conf::gets_from_file lineno 0 lineno_tok 0 buf {} toks {} toks_toks {} src CHAN} srcs {{} {gets_r conf::gets_from_str lineno 0 lineno_tok 0 buf {} toks {} toks_toks {} src {k1 = v1}}} sect {} sect_type {}}

